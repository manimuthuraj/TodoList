<%- include("../partials/header") %>
    <link rel="stylesheet" href="/css/add.css" type="text/css">
    <h2 id="name">PERSONAL TODO</h2>
    <div class="container row">
        <div class="add col-md-8">
            <div>
                <h3> Add New Task</h3>
            </div>
            <form action="/todo" method="POST" id="myform">
                <div class=" form-group ">
                    <label for="Name ">Task Name</label>
                    <input type="text" class="form-control " required id="name " name="task_name" placeholder="Task Name ">
                </div>

                <div class=" form-group ">
                    <label for="Name ">Expiry Date</label>
                    <input type="date" class="form-control " id="name " required name="expiry" placeholder="Expirye ">
                </div>

                <div class=" form-group ">
                    <label for="Name ">Expiry Time</label>
                    <input type="time" class="form-control " id="name " required name="time" placeholder="Expirye ">
                </div>
                <div>
                    <button type="submit" id="submit" class="btn btn-primary ">Add</button>
                </div>
                <p id="required"></p>
            </form>
        </div>
    </div>

    <%- include("../partials/footer") %>